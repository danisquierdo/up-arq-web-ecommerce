extends layout
block banner
    include ./includes/men_banner.jade
block content
    .men
        .container
            .col-md-9.single_top
                .single_left
                    .labout.span_1_of_a1
                        .flexslider
                            ul.slides
                                each img in product.images
                                    li(data-thumb='/images/'+img)
                                        img(src='/images/'+img)
                        .clearfix
                    .cont1.span_2_of_a1.simpleCart_shelfItem
                        h1= product.name
                        p.availability Disponibilidad:
                            span.color
                                if product.available
                                    | En Stock
                                else
                                    | No Disponible
                        .price_single
                            if product.discount > 0
                                span.reducedfrom= product.price*(product.discount/100)
                            span.amount.item_price.actual= product.price
                        h2.quick Overview:
                        p.quick_desc= product.overview
                        .wish-list
                            ul
                                li.wish
                                    a(href='#') Agregar a favoritos
                        if product.available
                            .quantity_box
                                ul.product-qty
                                    span Quantity:
                                    select
                                        -n=1
                                        while n <= product.quantity
                                            option= n++
                                ul.single_social
                                    li
                                        a(href='#')
                                            i.fb1
                                    li
                                        a(href='#')
                                            i.tw1
                                    li
                                        a(href='#')
                                            i.g1
                                .clearfix
                        a.btn.btn-primary.btn-normal.btn-inline.btn-form.button.item_add.item_1(href='#', target='_self') Comprar
                    .clearfix
                .sap_tabs
                    #horizontalTab(style='display: block; width: 100%; margin: 0px;')
                        ul.resp-tabs-list
                            li.resp-tab-item(aria-controls='tab_item-0',role='tab')
                                span Descripción
                            li.resp-tab-item(aria-controls='tab_item-1',role='tab')
                                span Información Adicional
                            li.resp-tab-item(aria-controls='tab_item-2',role='tab')
                                span Reviews
                        .resp-tabs-container
                            .tab-1.resp-tab-content(aria-labelledby='tab_item-0')
                                .facts
                                    ul.tab_list
                                        li
                                            a(href='#')= product.description
                            .tab-1.resp-tab-content(aria-labelledby='tab_item-1')
                                .facts
                                    ul.tab_list
                                        li
                                            a(href='#')= product.additionalInfo
                            .tab-1.resp-tab-content(aria-labelledby='tab_item-2')
                                .facts
                                    ul.tab_list
                                        each review in product.reviews
                                            li
                                                a(href='#')= review.review
            .col-md-3.tabs
                h3.m_1 Productos Relacionados
                for rel in product.related
                    ul.product
                        li.product_img
                            img.img-responsive(src='/images/'+rel.images[0])
                        li.product_desc
                            h4
                                a(href='/products/' + rel.id)= rel.name
                            p.single_price= rel.price
                            a.link-cart(href='#') Agregar a favoritos
                            a.link-cart(href='#') Comprar
                        .clearfix
            .clearfix






