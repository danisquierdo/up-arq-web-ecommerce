extends layout

block banner
  include ./includes/banner.jade
block content
  .main
     .container
       ul.content-home
        each promo in promos
          li.col-sm-4
            a.item-link(href=promo.url)
              .bannerBox
                img.item-img(src="/images/"+promo.image width='100%' height='100%')
                .item-html
                  h3=promo.title
                    span=promo.subtitle
                  button Shop Now!
        .clearfix
     .middle_content
       .container
         h2 Bienvenido
